<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
        <groupId>org.bonitasoft.console</groupId>
        <artifactId>bonita-console</artifactId>
        <version>7.0.0.TEST</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>looknfeel</artifactId>
	<name>Web looknfeel</name>
	<packaging>jar</packaging>
	
	<properties>
		<output.directory>${project.build.directory}/${project.build.finalName}</output.directory>
		<wro.config>${basedir}/src/main/wro/wro-build-time</wro.config>
		<jetty.rewrite.version>7.6.3.v20120416</jetty.rewrite.version>
		<jetty.servlets.version>7.6.3.v20120416</jetty.servlets.version>
		<!--<jacoco.skip>true</jacoco.skip>-->
	</properties>

	<dependencies>
		<dependency>
			<groupId>ro.isdc.wro4j</groupId>
			<artifactId>wro4j-core</artifactId>
		</dependency>
		<dependency>
			<groupId>ro.isdc.wro4j</groupId>
			<artifactId>wro4j-extensions</artifactId>
		</dependency>
	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<targetPath>${output.directory}/css</targetPath>
			</resource>
		</resources>
	</build>

	<profiles>
		<profile>
			<id>prod</id>
			<activation>
				<property>
					<name>target</name>
					<value>prod</value>
				</property>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<plugins>
					<!-- Less compilation -->
					<plugin>
						<groupId>ro.isdc.wro4j</groupId>
						<artifactId>wro4j-maven-plugin</artifactId>
						<executions>
							<execution>
								<phase>generate-resources</phase>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<contextFolder>src/main</contextFolder>
							<wroManagerFactory>ro.isdc.wro.maven.plugin.manager.factory.ConfigurableWroManagerFactory</wroManagerFactory>
							<extraConfigFile>${wro.config}/wro.properties</extraConfigFile>

							<targetGroups>bonita,bonita-skin</targetGroups>
							<wroFile>${wro.config}/wro.xml</wroFile>

							<cssDestinationFolder>${output.directory}/css</cssDestinationFolder>
							<ignoreMissingResources>false</ignoreMissingResources>
						</configuration>
					</plugin>

					<!-- Resource packaging -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
						<configuration>
							<appendAssemblyId>true</appendAssemblyId>
							<descriptors>
								<descriptor>assemblyCSS.xml</descriptor>
								<descriptor>assemblyLESS.xml</descriptor>
							</descriptors>
						</configuration>
						<executions>
							<execution>
								<id>make-assembly</id>
								<phase>package</phase>
								<goals>
									<goal>single</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>css</id>
			<activation>
				<property>
					<name>target</name>
					<value>css</value>
				</property>
			</activation>
			<build>
				<resources>
					<resource>
						<directory>src/main/wro/wro-run-time</directory>
						<targetPath>${output.directory}</targetPath>
					</resource>
				</resources>
				<plugins>
					<plugin>
						<groupId>org.mortbay.jetty</groupId>
						<artifactId>jetty-maven-plugin</artifactId>
						<version>7.6.3.v20120416</version>
						<configuration>
                            <webAppXml>src/test/resources/web.xml</webAppXml>
							<scanIntervalSeconds>0</scanIntervalSeconds>
							<webAppSourceDirectory>${output.directory}</webAppSourceDirectory>
							<connectors>
								<connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
									<port>8081</port>
									<maxIdleTime>3600000</maxIdleTime>
								</connector>
							</connectors>
						</configuration>
						<dependencies>
							<dependency>
								<groupId>org.eclipse.jetty</groupId>
								<artifactId>jetty-servlets</artifactId>
								<version>${jetty.servlets.version}</version>
								<scope>runtime</scope>
							</dependency>
							<dependency>
								<groupId>org.eclipse.jetty</groupId>
								<artifactId>jetty-rewrite</artifactId>
								<version>${jetty.rewrite.version}</version>
								<scope>runtime</scope>
							</dependency>
						</dependencies>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
